    <div class="row">
      <h3 class="page-header text-success">HardWare</h3>
      <table class="table table-striped">
        <tr>
          <td>Name</td>
          <td>Model</td>
          <td>Category</td>
          <td>Description</td>
          <td>Quantity</td>
          <td>Stock statut</td>
          <td>New stock</td>
          <td>Detail</td>
          <td>Delete</td>
        </tr>
        <% @devices_hard.each do |d| %>
         <tr>
           <td><%= d.name %></td>
           <td><%= d.model %></td>
           <td><%= d.category %></td>
           <td><%= d.description %></td>
           <td><%= d.stock %></td>
           <td>
             <% if d.stock < 2 %>
              <%= image_tag "close.png" %>
             <% else %>
               <% if d.stock < 6 %>
                 <%= image_tag "warning.png" %>
                <% else %>
                 <%= image_tag "succes.png" %>
                <% end %>
             <% end %>
           </td>
           <td><a href="/devices/<%= d.id %>"><%= image_tag "update.png" %></a></td>
           <td><a href="#">View</a></td>
           <td>
             <%= form_tag "/devices/#{d.id}", method: "delete" do %>
                  <button type="submit"><%= image_tag "basket.png" %></button>
                <% end %>
           </td>
         </tr>
        <% end %>
      </table>

